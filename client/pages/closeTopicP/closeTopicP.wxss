page{
   display:block;
  min-height: 100%;  
  background-color:#F0F0F0;  
}
.topicName{
  background-color: white;
  display:flex;
  justify-content: center;
  height:60rpx;
  padding:20rpx;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);
}

.content{
  padding:10rpx;
  background-color: white;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.14), 0 0 0 rgba(0, 0, 0, 0.28);
}
.noneContent{
  padding:10rpx 10rpx 0rpx 10rpx;
}
.radio{
  height:80rpx;
  padding:15rpx 15rpx 0rpx 15rpx;
}
.radio-group{
  display: flex;
  flex-direction: column;
  position: absolute;
  width:100%;
  background-color: white;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.14), 0 0 0 rgba(0, 0, 0, 0.28);
}
radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;
   height: 40rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;
  width: 60rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 60rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size:40rpx; /* 对勾大小 30rpx */
  color:#24757C; /* 对勾颜色 白色 */
  background:transparent;
  background-color:#24757C;
  border:none;
}

.bottomB{
  border-radius: 40rpx;
  position:fixed;
  bottom: 15rpx;
  left:20rpx;
  right:20rpx;
  background-color: #24757C;
  color:white;
}
.divLine{
 background:#F0F0F0;
 width: 100%;
 height: 2rpx;
}
.input{
  background-color: white;
  margin-left: auto;
  margin-right:auto;
  width: 100%;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.14), 0 0 0 rgba(0, 0, 0, 0.28);
}