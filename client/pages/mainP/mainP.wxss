/**index.wxss**/
page{
  display:block;
  min-height: 100%;  
  background-color:#F0F0F0;  
}
.noneTopic{
  background-color: white;
  padding-bottom: 10rpx;
}
.userinfo {
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
}

.search{  
  width: 100%;  
}  
.search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin: 15rpx;
  background-color: white; 
}  
.search_arr input{  
  margin-left: 60rpx;  
  height: 60rpx;  
  border-radius: 5px;  
}  
.bc_text {  
  line-height: 68rpx;  
  height: 68rpx;  
  margin-top: 34rpx;  
}  
.textInSearchColumn{
  font-size:30rpx; 
}
.page_row{  
  background-color: #F0F0F0;
  display: flex;  
  flex-direction: row;
  margin-bottom: 0;
  padding:5rpx;
}  
.searchcion {  
  margin: 10rpx 10rpx 10rpx 10rpx;  
  position: absolute;  
  left:25rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px;  
  text-align: center;  
}  
.COIcon{
  width:40rpx;
  height:40rpx;
}

.topicList{
  align-items: center;
  background-color: white;
  padding:20rpx;
  display: flex;  
  flex-direction: row;
  justify-content: space-between;
  height:80rpx;
}
.topicLine{
  align-items: center;
  width:80%
}
.moreB{
  height:35rpx;
  width:35rpx;
}
.divLine{
 background:#F0F0F0;
 width: 100%;
 height: 3rpx;
}
.addB{
  width:50px;
  height:50px;
  position:fixed;
  right:15px;
  bottom:15px;
  border-radius: 50%;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);
}


.filter{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  padding-left:40rpx;
  padding-right:40rpx;
  font-size:30rpx;
}
.filter label{
  border-radius: 4px; 
}
.filter .itemIsNotChecked{
  color:#aaa;
}
.filter .itemIsChecked{
  color:black;
  border-bottom: 4px solid #24757C;
  border-bottom-left-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
}
