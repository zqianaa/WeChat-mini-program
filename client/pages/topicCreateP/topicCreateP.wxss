page{
   display:block;
  min-height: 100%;  
  background-color:#F0F0F0;  
}
.topContent{
  background-color: white;
  display:flex;
  justify-content: center;
  height:60rpx;
  padding:20rpx;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.14), 0 4px 8px rgba(0, 0, 0, 0.28);
}
.content{
  padding:10rpx;
  background-color: white;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.14), 0 0 0 rgba(0, 0, 0, 0.28);
}
.noneContent{
  padding:10rpx 10rpx 0rpx 10rpx;
}
.input{
  background-color: white;
  margin-left: auto;
  margin-right:auto;
  width: 100%;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.14), 0 0 0 rgba(0, 0, 0, 0.28);
}
.bottomB{
  border-radius: 40rpx;
  position:fixed;
  bottom: 15rpx;
  left:20rpx;
  right:20rpx;
  background-color: #24757C;
  color:white;
}
